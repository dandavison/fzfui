#!/usr/bin/env bash
# snitchi - interactive snitch wrapper using cmdi

SCRIPT="$0"
[[ -L "$SCRIPT" ]] && SCRIPT="$(readlink "$SCRIPT")"
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT")" && pwd)"

# snitch output has leading spaces that need stripping
exec "$SCRIPT_DIR/cmdi" "snitch ls${*:+ $*} | sed 's/^  //'" --config "$SCRIPT_DIR/snitch.conf"
